ninja_required_version = 1.3

cxxflags = -std=c++20 -Iinclude -g

rule compile
    command = clang++ $cxxflags -c $in -o $out

rule link
    command = clang++ $in -o $out

build build/JsonRpcParser.o: compile src/JsonRpcParser.cpp

build lsp: link build/JsonRpcParser.o build/main.o
build build/main.o: compile src/main.cpp

default lsp
